<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="singlepayerpaymentscreens.SinglePayerCardSnapshotScreen" 
    android:background="@drawable/backg">
    
    
    <EditText
            android:id="@+id/et_signature_su_snapshot_screen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/custom_et_green"
            android:ems="10"
            android:padding="15dp"
            android:singleLine="true"
            android:textColor="#FFFFFF"
            android:editable="false"
            android:textSize="20sp" 
            android:text="Signature">
        </EditText>

       <EditText
           android:id="@+id/et_amount_su_snapshot_screen"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_alignLeft="@+id/et_signature_su_snapshot_screen"
           android:layout_below="@+id/et_signature_su_snapshot_screen"
           android:layout_marginTop="15dp"
           android:background="@drawable/custom_et_green"
           android:editable="false"
           android:ems="10"
           android:padding="10dp"
           android:singleLine="true"
           android:text="Amount"
           android:textColor="#FFFFFF"
           android:textSize="20sp" >

           <requestFocus />
       </EditText>



    <EditText
        android:id="@+id/et_cashpaid_su_snapshot_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_amount_su_snapshot_screen"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_et_dark_blue"
        android:editable="false"
        android:ems="10"
        android:padding="15dp"
        android:singleLine="true"
        android:text="cashpaid"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />



       <EditText
           android:id="@+id/et_changedue_su_snapshot_screen"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@+id/et_cashpaid_su_snapshot_screen"
           android:background="@drawable/custom_et_red"
           android:editable="false"
           android:ems="10"
           android:padding="15dp"
           android:layout_marginTop="15dp"
           android:singleLine="true"
           android:text="changedue"
           android:textColor="#FFFFFF"
           android:textSize="20sp" />

       <EditText
           android:id="@+id/et_balance_su_snapshot_screen"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@+id/et_changedue_su_snapshot_screen"
           android:layout_marginTop="15dp"
           android:background="@drawable/custom_et_green"
           android:editable="false"
           android:ems="10"
           android:padding="15dp"
           android:singleLine="true"
           android:text="balance"
           android:textColor="#FFFFFF"
           android:textSize="20sp" />

    <Button
        android:id="@+id/bt_ok_su_snapshot_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_flat"
        android:padding="8dp"
        android:text="OK"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold" />       
</RelativeLayout>
