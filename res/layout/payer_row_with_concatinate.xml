<?xml version="1.0" encoding="utf-8"?>

<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <ImageView
            android:id="@+id/iv_concatinate"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_below="@+id/bt_payer_name"
            android:layout_centerHorizontal="true"
            android:src="@drawable/concat" />

        <Button
            android:id="@+id/bt_payer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginLeft="20dp"
            android:layout_toLeftOf="@+id/et_payer_amount"
            android:layout_weight="3"
            android:background="@drawable/button_flat_green_purple"
            android:padding="8dp"
            android:text="Payer 1"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_payer_amount"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/bt_payer_name"
            android:layout_marginRight="10dp"
            android:background="@drawable/custom_et_red"
            android:enabled="false"
            android:inputType="text"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="#FFFFFF"
            android:textSize="20sp" >
        </EditText>

    </RelativeLayout>

 </TableRow>
