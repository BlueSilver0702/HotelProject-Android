<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="singlepayerpaymentscreens.RecieptScreen" 
    android:background="@drawable/backg"
    >

<Button
    android:id="@+id/bt_no_reciept"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"  
    android:background="@drawable/button_flat"
    android:padding="8dp"
    android:text="No Receipt"
    android:textColor="@android:color/white"
    android:textSize="16sp"
    android:textStyle="bold" />

<Button
    android:id="@+id/bt_e_reciept"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/bt_no_reciept"
    android:background="@drawable/button_flat"
    android:layout_marginTop="15dp"
    android:text="E Receipt"
    android:textColor="@android:color/white"
    android:textSize="16sp"
    android:textStyle="bold" />

<Button
    android:id="@+id/bt_hard_copy_reciept"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/bt_e_reciept"
    android:background="@drawable/button_flat"
    android:layout_marginTop="15dp"
    android:text="Hard Copy"
    android:textColor="@android:color/white"
    android:textSize="16sp"
    android:textStyle="bold" />

<ImageView
    android:id="@+id/imageView1"
    android:layout_width="100dp"
    android:layout_height="110dp"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="56dp"
    android:src="@drawable/reciept" />

<TextView
    android:id="@+id/textView1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/imageView1"
    android:layout_centerHorizontal="true"
    android:text="Receipt?"
    android:textColor="#FFFFFF"
    android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>
