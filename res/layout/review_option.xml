<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context="multipayerpaymentscreens.TipCouponMultipayer" >

    <Button
        android:id="@+id/bt_split"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_reallocate"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:background="@drawable/button_flat"
        android:text="SPLIT"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:src="@drawable/howmanypayers"
        android:text="Payment cannot proceed unless one of 2 options!"
        android:textAppearance="?android:attr/textAppearanceMedium" >

    </TextView>

    <Button
        android:id="@+id/bt_reallocate"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageView1"
        android:background="@drawable/button_flat"
        android:text="REALLOCATE"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>