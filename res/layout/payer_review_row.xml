<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/bt_text"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="5dp"
            android:background="#5b9bd5"
            android:clickable="false"
            android:focusable="false"
            android:minHeight="40dp"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="@dimen/abc_action_bar_subtitle_text_size" />

        <Button
            android:id="@+id/bt_minus"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/bt_text"
            android:background="#ff0000"
            android:fontFamily="@string/abc_searchview_description_clear"
            android:height="40dp"
            android:maxHeight="40dp"
            android:minHeight="40dp"
            android:scrollHorizontally="false"
            android:text="-"
            android:textColor="#ffffff"
            android:textSize="35sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt_plus"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/bt_minus"
            android:background="#00b050"
            android:minHeight="40dp"
            android:text="+"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_int"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/bt_text"
            android:layout_alignLeft="@+id/bt_text"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:text="1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/bt_text"
            android:layout_toRightOf="@+id/tv_int"
            android:layout_marginTop="11dp"
            android:text="2"
            android:textColor="#fff"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/tv_sla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_num"
            android:layout_alignTop="@+id/bt_text"
            android:layout_marginTop="10dp"
            android:text="/"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/tv_den"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_sla"
            android:layout_alignTop="@+id/bt_text"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="-1dp"
            android:text="4"
            android:textColor="#fff"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_den"
            android:layout_alignTop="@+id/bt_text"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="7dp"
            android:text="Btl. Wine $7.33"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#fff" />

    </RelativeLayout>

</TableRow>
